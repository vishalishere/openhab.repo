<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>org.openhab</groupId>
    <artifactId>repo</artifactId>
    <version>2.0.0-SNAPSHOT</version>
    <name>openHAB</name>

<packaging>kar</packaging>
<build>
  <plugins>
    <plugin>
      <groupId>com.eclipsesource.tycho.karaf.bridge</groupId>
      <artifactId>kar-packager</artifactId>
      <version>0.6.0</version>
      <extensions>true</extensions>
      <configuration>
        <bundlesFolder>bundles</bundlesFolder>
        <featureName>addons</featureName>
        <featureVersion>2.0.0-SNAPSHOT</featureVersion>
        <featureDescription>openHAB 2 Addons</featureDescription>        
        <karFile>addons</karFile>
      </configuration>
    </plugin>
  </plugins>
</build>        
</project>

